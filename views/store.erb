<div class="store_header">
	<img src="/images/stealy.png" alt="">
	<h1>Store</h1>
</div>

<div class="row">
	<% @inventory_list.each do |item| %>
		<div class="col-md-3 store_item_container">
			<div class="store_item_border">
			<a class="store_item" href="/items/<%= item.id %>">
				<img src="<%= item.image_url%>" alt="">
				<div class="store_item_details">
					<span class="name"><%= item.name %></span>
					<span class="price"><%= item.price %> Schmeckles</span>
				</div>
			</a>
			</div>
		</div>
	<% end %>
</div>
